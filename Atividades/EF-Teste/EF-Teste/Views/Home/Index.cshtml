@model ICollection<EF_Teste.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@Model.Count estudante</h1>
    
    <table>
    <tr>
        <table class="table table-responsive table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Data Matrícula</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                            <td>@s.ID</td>
                            <td>@s.FirstMidName</td>
                            <td>@s.LastName</td>
                            <td>@s.EnrollmentDate.ToShortTimeString</td>
                    </tr>
                }
                </tbody>

        </table>
    </tr>
</table>

</div>
