@model IEnumerable<TransporteAereo.ViewModels.Admin.AeronaveListViewModel>

@{
    ViewData["Title"] = "Frota de Aeronaves | Transportes dos Guri";
    Layout = "_Layout";
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-7xl mx-auto px-6 sm:px-10 lg:px-12">

        <a asp-controller="AdminHome" asp-action="Index" class="inline-flex items-center justify-center text-white py-3 rounded-lg font-bold text-base uppercase tracking-wider shadow-md transition duration-300">
            <i class="fas fa-arrow-left mr-2"></i> < Voltar
        </a>

        <h1 class="text-4xl md:text-5xl font-extrabold mb-2 text-white">
            Frota de <span class="text-blue-400">Aeronaves</span>
        </h1>
        <p class="text-lg text-gray-400 mb-8 border-b border-gray-800 pb-4">
            Gerencie todas as aeronaves disponíveis.
        </p>

        <p class="mb-8">
            <a asp-action="Create"
               class="inline-flex items-center justify-center
                      bg-blue-600 hover:bg-blue-500 active:bg-blue-700
                      text-white px-6 py-3 rounded-lg font-bold text-base uppercase tracking-wider
                      shadow-md shadow-blue-500/30 transition duration-300 ease-in-out transform hover:scale-[1.02]
                      ring-2 ring-blue-600 ring-offset-2 ring-offset-black">
                <i class="fas fa-plus-circle mr-3"></i> Adicionar Nova Aeronave
            </a>
        </p>

        <div class="overflow-x-auto bg-gray-900/50 rounded-xl border border-gray-800 shadow-2xl shadow-blue-500/10">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-800/70">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Tipo)
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Modelo)
                        </th>
                        <th scope="col" class="relative px-6 py-4">
                            <span class="sr-only">Ações</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-800">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-800 transition duration-300">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-400 hover:text-blue-300 mr-4 transition duration-300">
                                    <i class="fas fa-edit mr-1"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-400 hover:text-white mr-4 transition duration-300">
                                    <i class="fas fa-info-circle mr-1"></i> Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-400 transition duration-300">
                                    <i class="fas fa-trash-alt mr-1"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <p class="text-center text-gray-500 p-8">Nenhuma aeronave cadastrada na frota.</p>
            }
        </div>

    </div>
</section>