@model TransporteAereo.ViewModels.Admin.AeronaveCompletaCreateViewModel

@{
    ViewData["Title"] = $"Detalhes - {Model.Tipo} {Model.Modelo}";
    Layout = "_Layout";
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-4xl mx-auto px-6 sm:px-10 lg:px-12">

        <h1 class="text-4xl md:text-5xl font-extrabold mb-2 text-white border-b border-gray-800 pb-4">
            Detalhes da <span class="text-blue-400">Aeronave</span>
        </h1>

        <div class="bg-gray-900/50 rounded-xl border border-gray-800 shadow-2xl shadow-blue-500/10 p-8 mb-8">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
                <div class="border-b border-gray-800 pb-3">
                    <dt class="text-sm font-medium text-gray-400">@Html.DisplayNameFor(model => model.Tipo)</dt>
                    <dd class="mt-1 text-lg text-white">@Html.DisplayFor(model => model.Tipo)</dd>
                </div>
                <div class="border-b border-gray-800 pb-3">
                    <dt class="text-sm font-medium text-gray-400">@Html.DisplayNameFor(model => model.Modelo)</dt>
                    <dd class="mt-1 text-lg text-white">@Html.DisplayFor(model => model.Modelo)</dd>
                </div>
                <div class="border-b border-gray-800 pb-3 sm:col-span-2">
                    <dt class="text-sm font-medium text-gray-400">ID</dt>
                    <dd class="mt-1 text-sm text-gray-300">@Html.DisplayFor(model => model.Id)</dd>
                </div>
            </dl>
        </div>

        <h2 class="text-3xl font-bold mb-4 text-white border-b border-gray-800 pb-2">
            Assentos
        </h2>

        @if (Model.Assentos != null && Model.Assentos.Any())
        {
            <div class="overflow-x-auto bg-gray-900/50 rounded-xl border border-gray-800 shadow-2xl shadow-blue-500/10">
                <table class="min-w-full divide-y divide-gray-700">
                    <thead class="bg-gray-800/70">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Número</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Classe</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Localização</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Lado</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-800">
                        @foreach (var assento in Model.Assentos.OrderBy(a => a.NumeroAssento))
                        {
                            <tr class="hover:bg-gray-800 transition duration-300">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">@assento.NumeroAssento</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@assento.Classe</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@assento.Localizacao</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@assento.Lado</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-gray-400 p-4 bg-gray-900/50 rounded-lg border border-gray-800">Nenhum assento cadastrado para esta aeronave.</p>
        }

        <div class="mt-8">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="text-blue-400 hover:text-blue-300 mr-4 font-semibold transition duration-300">
                <i class="fas fa-edit mr-1"></i> Editar
            </a>
            <a asp-action="Index" class="text-gray-400 hover:text-white font-semibold transition duration-300">
                <i class="fas fa-arrow-left mr-1"></i> Voltar para a Lista
            </a>
        </div>

    </div>
</section>