@model TransporteAereo.Models.Aeroporto

@{
    ViewData["Title"] = "Novo Aeroporto | Transportes dos Guri";
    Layout = "_Layout";
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-7xl mx-auto px-6 sm:px-10 lg:px-12">

        <h1 class="text-4xl md:text-5xl font-extrabold mb-2 text-white">
            Adicionar Novo <span class="text-blue-400">Aeroporto</span>
        </h1>
        <p class="text-lg text-gray-400 mb-10 border-b border-gray-800 pb-4">
            Preencha os dados para registrar um novo aeroporto.
        </p>

        <div class="flex justify-center">
            <div class="w-full md:w-2/3 lg:w-1/2 p-4">

                <div class="bg-gray-900/70 p-8 rounded-xl border border-gray-800 shadow-xl shadow-blue-500/10">

                    <h4 class="text-2xl font-bold text-white mb-6">Dados para Criação</h4>

                    <form asp-action="Create" class="space-y-6">
                        <div asp-validation-summary="ModelOnly" class="p-4 bg-red-900/30 border border-red-700 text-red-300 rounded-md"></div>

                        <div class="form-group">
                            <label asp-for="NomeAeroporto" class="block text-sm font-medium text-gray-300 mb-2">Nome do Aeroporto</label>
                            <input asp-for="NomeAeroporto" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Ex: Aeroporto Internacional..." />
                            <span asp-validation-for="NomeAeroporto" class="text-sm text-red-400 mt-1 block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CidadeAeroporto" class="block text-sm font-medium text-gray-300 mb-2">Cidade do Aeroporto</label>
                            <input asp-for="CidadeAeroporto" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" />
                            <span asp-validation-for="CidadeAeroporto" class="text-sm text-red-400 mt-1 block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EstadoAeroporto" class="block text-sm font-medium text-gray-300 mb-2">Estado do Aeroporto</label>
                            <input asp-for="EstadoAeroporto" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" />
                            <span asp-validation-for="EstadoAeroporto" class="text-sm text-red-400 mt-1 block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Pais" class="block text-sm font-medium text-gray-300 mb-2">País</label>
                            <input asp-for="Pais" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" />
                            <span asp-validation-for="Pais" class="text-sm text-red-400 mt-1 block"></span>
                        </div>

                        <div class="form-group pt-6 flex gap-4">
                            <input type="submit" value="Registrar Aeroporto"
                                   class="inline-flex items-center justify-center
                                            bg-blue-600 hover:bg-blue-500 active:bg-blue-700
                                            text-white px-6 py-3 rounded-lg font-bold text-lg uppercase tracking-wider
                                            shadow-lg shadow-blue-500/30 transition duration-300 ease-in-out transform hover:scale-[1.02]
                                            ring-2 ring-blue-600 ring-offset-2 ring-offset-gray-900 cursor-pointer flex-grow" />

                            <a asp-action="Index" class="flex-shrink-0 self-center text-red-400 hover:text-red-300 font-semibold transition duration-300">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="mt-12 text-center">
            <a asp-action="Index" class="text-blue-400 hover:text-blue-300 font-semibold transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i> Voltar para a Lista
            </a>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}