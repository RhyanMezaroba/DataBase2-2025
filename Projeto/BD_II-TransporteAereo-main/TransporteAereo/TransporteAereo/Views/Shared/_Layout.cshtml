<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Transportes dos Guri</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLMDJ/cn/zD1L34wQdFJjN6S4e6r/4K2y4I8L+dK7z0B2Fw5v/y9vN0A9Q4l2fA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary-blue': '#3b82f6', 
                        'neon-blue': '#60a5fa', 
                        'dark-bg': '#0a0a0a', 
                        'dark-surface': '#1f2937', 
                    }
                }
            }
        }
    </script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TransporteAereo.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark-bg text-gray-100 min-h-screen flex flex-col">

    <header class="sticky top-0 z-50 bg-black/95 backdrop-blur-md shadow-lg border-b border-neon-blue/30">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
            <a class="text-2xl font-extrabold text-white tracking-wider hover:text-neon-blue transition duration-300
                      drop-shadow-lg [text-shadow:_0_0_5px_rgba(96,165,250,0.8)]"
               asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-plane-departure mr-2 text-primary-blue"></i> Transportes dos Guri
            </a>

            <div class="hidden sm:flex items-center space-x-8">
                <ul class="flex items-center space-x-8">
                    <li class="nav-item">
                        <a class="text-lg font-medium text-gray-300 hover:text-neon-blue transition duration-300 uppercase tracking-widest"
                           asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="text-lg font-medium text-gray-300 hover:text-neon-blue transition duration-300 uppercase tracking-widest"
                           asp-area="" asp-controller="Viagens" asp-action="Index">Viagens</a>
                    </li>
                    <li class="nav-item">
                        <a class="text-lg font-medium text-gray-300 hover:text-neon-blue transition duration-300 uppercase tracking-widest"
                           asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
                    </li>
                </ul>

                <partial name="_LoginPartial"/>
            </div>

            <button class="sm:hidden text-neon-blue text-2xl hover:text-primary-blue transition duration-300" type="button" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

        </nav>
    </header>

    <div class="flex-grow">
        <main role="main" class="max-w-8xl mx-auto">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark-surface mt-10 py-8 border-t border-neon-blue/30 shadow-inner shadow-black/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-sm text-gray-400">
            <p>&copy; @DateTime.Now.Year - Transportes dos Guri. Todos os direitos reservados.</p>
            <div class="mt-2 space-x-4">
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-neon-blue transition duration-300">Sobre o Projeto</a>
            </div>
            <p class="mt-4 text-xs text-gray-600">Desenvolvido com ASP.NET Core e Tailwind CSS.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>