@model TransporteAereo.Models.Voo

@{
    ViewData["Title"] = $"Voo Detalhes | {Model.AeroportoOrigem.CidadeAeroporto} - {Model.AeroportoDestino.CidadeAeroporto}";
    Layout = "_Layout";

    var duracao = Model.HorarioChegada - Model.HorarioSaida;
    var duracaoFormatada = $"{(int)duracao.TotalHours}h {duracao.Minutes}m";
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-4xl mx-auto px-6 sm:px-10 lg:px-12">

        <h1 class="text-4xl md:text-5xl font-extrabold mb-2 text-white border-b border-gray-800 pb-4">
            Detalhes do <span class="text-blue-400">Voo</span>
        </h1>
        <h2 class="text-2xl text-gray-400 mb-8">
            @Model.AeroportoOrigem.CidadeAeroporto (@Model.AeroportoOrigem.EstadoAeroporto)
            <i class="fas fa-long-arrow-alt-right mx-2"></i>
            @Model.AeroportoDestino.CidadeAeroporto (@Model.AeroportoDestino.EstadoAeroporto)
        </h2>

        <div class="bg-gray-900/50 rounded-xl border border-gray-800 shadow-2xl shadow-blue-500/10 p-8 mb-8">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">

                <div class="border-b border-gray-800 pb-3 sm:col-span-2">
                    <dt class="text-sm font-medium text-gray-400">Aeronave</dt>
                    <dd class="mt-1 text-lg text-white">@Model.Aeronave.Modelo (@Model.Aeronave.Tipo)</dd>
                </div>

                <div class="border-b border-gray-800 pb-3">
                    <dt class="text-sm font-medium text-gray-400">Partida</dt>
                    <dd class="mt-1 text-lg text-white">@Model.HorarioSaida.ToString("dd/MM/yyyy HH:mm")</dd>
                    <dd class="text-xs text-gray-500">(@Model.AeroportoOrigem.NomeAeroporto)</dd>
                </div>

                <div class="border-b border-gray-800 pb-3">
                    <dt class="text-sm font-medium text-gray-400">Chegada</dt>
                    <dd class="mt-1 text-lg text-white">@Model.HorarioChegada.ToString("dd/MM/yyyy HH:mm")</dd>
                    <dd class="text-xs text-gray-500">(@Model.AeroportoDestino.NomeAeroporto)</dd>
                </div>

                <div class="border-b border-gray-800 pb-3">
                    <dt class="text-sm font-medium text-gray-400">Duração Estimada</dt>
                    <dd class="mt-1 text-lg text-white">@duracaoFormatada</dd>
                </div>

                <div class="border-b border-gray-800 pb-3">
                    <dt class="text-sm font-medium text-gray-400">Preço Base</dt>
                    <dd class="mt-1 text-xl font-bold text-green-400">@Model.PrecoBase.ToString("C2")</dd>
                </div>
            </dl>
        </div>

        <h3 class="text-2xl font-bold mb-4 text-white border-b border-gray-800 pb-2">Escalas</h3>

        @if (Model.Escalas != null && Model.Escalas.Any())
        {
            <div class="overflow-x-auto bg-gray-900/50 rounded-xl border border-gray-800 shadow-2xl shadow-blue-500/10 mb-8">
                <table class="min-w-full divide-y divide-gray-700">
                    <thead class="bg-gray-800/70">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Aeroporto</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Chegada na Escala</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Saída da Escala</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-800">
                        @foreach (var escala in Model.Escalas.OrderBy(e => e.HorarioChegada))
                        {
                            <tr class="hover:bg-gray-800 transition duration-300">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">@escala.AeroportoEscala.NomeAeroporto (@escala.AeroportoEscala.CidadeAeroporto)</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@escala.HorarioChegada.ToString("dd/MM HH:mm")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@escala.HorarioSaida.ToString("dd/MM HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-gray-400 p-4 bg-gray-900/50 rounded-lg border border-gray-800 mb-8">Este voo não possui escalas.</p>
        }

        <div class="mt-8">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="text-blue-400 hover:text-blue-300 mr-4 font-semibold transition duration-300">
                <i class="fas fa-edit mr-1"></i> Editar
            </a>
            <a asp-action="Index" class="text-gray-400 hover:text-white font-semibold transition duration-300">
                <i class="fas fa-arrow-left mr-1"></i> Voltar para a Lista
            </a>
        </div>

    </div>
</section>