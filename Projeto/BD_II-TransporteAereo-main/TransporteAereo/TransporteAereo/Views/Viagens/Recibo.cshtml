@model TransporteAereo.Models.Compra
@using TransporteAereo.Models

@{
    ViewData["Title"] = "Recibo da Compra";
    Layout = "_Layout";
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-4xl mx-auto px-6 sm:px-10 lg:px-12">

        <h1 class="text-4xl md:text-5xl font-extrabold mb-3 text-green-400">
            ✅ Recibo de Compra
        </h1>
        <p class="text-gray-400 mb-8 border-b border-gray-800 pb-4">
            Detalhes da sua transação confirmada.
        </p>

        <div class="bg-gray-900 rounded-xl border border-gray-800 shadow-xl shadow-green-500/10 p-8 mb-10">

            <h2 class="text-2xl font-bold text-blue-400 mb-4 border-b border-gray-700 pb-3">
                @Model.Viagem.NomeViagem
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-300 text-lg">
                <p><span class="text-green-400 font-semibold">Transação ID:</span> @Model.Id</p>
                <p><span class="text-green-400 font-semibold">Data da Compra:</span> @Model.DataCompra.ToString("dd/MM/yyyy HH:mm")</p>
                <p><span class="text-green-400 font-semibold">Origem:</span> @Model.Viagem.AeroportoOrigem.NomeAeroporto</p>
                <p><span class="text-green-400 font-semibold">Destino:</span> @Model.Viagem.AeroportoDestino.NomeAeroporto</p>
                <p class="md:col-span-2"><span class="text-green-400 font-semibold">Preço Base por Assento:</span> @Model.Viagem.PrecoTotal.ToString("C")</p>
            </div>

            <p class="mt-6 text-4xl font-extrabold text-green-400">
                Total Pago: @Model.PrecoTotal.ToString("C")
            </p>
        </div>

        <h3 class="text-3xl font-bold text-amber-400 mb-6 border-b border-gray-800 pb-3">
            Assentos Reservados (@Model.Reservas.Count())
        </h3>

        <div class="space-y-6">
            @foreach (var reserva in Model.Reservas.OrderBy(r => r.VooPoltrona.Voo.HorarioSaida))
            {
                var voo = reserva.VooPoltrona.Voo;
                var assento = reserva.VooPoltrona.Assento;

                string classeCor = assento.Classe switch
                {
                    ClasseAssento.Executiva => "text-yellow-400",
                    ClasseAssento.Primeira => "text-red-400",
                    _ => "text-blue-400",
                };

                <div class="bg-gray-900 rounded-xl border border-gray-700 p-6 shadow-md shadow-amber-500/10">
                    <div class="flex justify-between items-start mb-3 border-b border-gray-800 pb-3">
                        <h4 class="text-xl font-bold @classeCor">
                            Assento @assento.NumeroAssento (@assento.Classe)
                        </h4>
                        <p class="text-2xl font-extrabold text-green-400">
                            @reserva.PrecoReserva.ToString("C")
                        </p>
                    </div>

                    <p class="text-lg font-semibold text-white mb-2">
                        ✈️ Trecho: @voo.AeroportoOrigem.NomeAeroporto → @voo.AeroportoDestino.NomeAeroporto
                    </p>

                    <div class="text-sm text-gray-400 grid grid-cols-2 gap-2">
                        <p>Partida: @voo.HorarioSaida.ToString("dd/MM/yyyy HH:mm")</p>
                        <p>Chegada: @voo.HorarioChegada.ToString("dd/MM/yyyy HH:mm")</p>
                        <p>Aeronave: @voo.Aeronave?.Modelo</p>
                        <p>
                            Status da Reserva:
                            <span class="font-bold @(reserva.Status == StatusReserva.Confirmada ? "text-green-300" : "text-yellow-300")">
                                @reserva.Status
                            </span>
                        </p>
                    </div>
                </div>
            }
        </div>

        <div class="mt-10 flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
            <a asp-action="DownloadRecibo" asp-route-id="@Model.Id"
               class="inline-block px-8 py-3 bg-green-600 hover:bg-green-700 text-white font-bold rounded-xl shadow-lg shadow-green-500/30 transition text-center">
                Baixar Passagem PDF
            </a>

            <a asp-action="MinhasViagens"
               class="inline-block px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-500/30 transition text-center">
                Voltar para Minhas Viagens
            </a>
        </div>
    </div>
</section>