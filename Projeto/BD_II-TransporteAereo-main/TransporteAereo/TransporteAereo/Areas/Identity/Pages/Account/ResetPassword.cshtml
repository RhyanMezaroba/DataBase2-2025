@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha";
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-md mx-auto px-6 sm:px-10 lg:px-12">
        <h1 class="text-4xl font-extrabold mb-2 text-white">Redefinir Senha</h1>
        <p class="text-gray-400 mb-10 border-b border-gray-800 pb-4">
            Digite sua nova senha abaixo.
        </p>

        <div class="bg-gray-900/70 p-8 rounded-xl border border-gray-800 shadow-xl shadow-blue-500/10">
            <form method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="p-4 bg-red-900/30 border border-red-700 text-red-300 rounded-md"></div>
                <input asp-for="Input.Code" type="hidden" />

                <div class="form-group">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.Email" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-sm text-red-400 mt-1 block"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.Password" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Nova senha" />
                    <span asp-validation-for="Input.Password" class="text-sm text-red-400 mt-1 block"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-300 mb-2"></label>
                    <input asp-for="Input.ConfirmPassword" class="w-full bg-gray-800 text-white border border-gray-700 rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Confirmar nova senha" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-400 mt-1 block"></span>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white px-6 py-3 rounded-lg font-bold text-lg shadow-lg shadow-blue-500/30 transition duration-300 transform hover:scale-[1.02]">
                    Redefinir Senha
                </button>

                <div class="mt-4 text-center">
                    <a asp-page="./Login" class="text-blue-400 hover:text-blue-300 font-semibold transition duration-300">Voltar ao login</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
