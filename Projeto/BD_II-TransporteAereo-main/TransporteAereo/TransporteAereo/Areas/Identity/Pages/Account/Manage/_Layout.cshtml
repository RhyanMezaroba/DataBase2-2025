@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-7xl mx-auto px-6 sm:px-10 lg:px-12">
        <h1 class="text-4xl font-extrabold mb-2 text-white">
            Gerencie sua <span class="text-blue-400">Conta</span>
        </h1>
        <p class="text-gray-400 mb-10 border-b border-gray-800 pb-4">
            Ajuste suas configurações de perfil, segurança e dados pessoais.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-10">
            <div class="bg-gray-900/70 border border-gray-800 rounded-xl p-6 shadow-xl shadow-blue-500/10">
                <partial name="_ManageNav" />
            </div>
            <div class="md:col-span-3 bg-gray-900/70 border border-gray-800 rounded-xl p-8 shadow-xl shadow-blue-500/10">
                @RenderBody()
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
