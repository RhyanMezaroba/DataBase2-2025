@page
@model TransporteAereo.Areas.Identity.Pages.Account.RegistrationSuccessModel

@{
    ViewData["Title"] = "Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<section class="min-h-screen py-20 bg-black text-white">
    <div class="max-w-3xl mx-auto px-6 sm:px-10 lg:px-12">
        <h2 class="text-3xl font-extrabold mb-4 text-white border-b border-gray-800 pb-3">
            @ViewData["Title"]
        </h2>

        <div class="bg-gray-900/70 p-8 rounded-xl border border-gray-800 shadow-xl shadow-blue-500/10 space-y-6">
            <p class="text-gray-300">
                Sua conta contém dados pessoais que você nos forneceu. Aqui você pode <span class="text-blue-400 font-semibold">baixar</span>, <span class="text-yellow-400 font-semibold">editar</span> ou <span class="text-red-400 font-semibold">excluir</span> permanentemente essas informações.
            </p>

            <p class="text-red-400 font-semibold bg-red-900/20 border border-red-800 p-4 rounded-lg">
                ⚠️ A exclusão é permanente e não pode ser desfeita.
            </p>

            <p>Seus Dados Cadastrais são:</p>

            @if (Model.UserData != null)
            {

                <h3 class="text-xl font-bold mt-6 mb-3">Seus dados cadastrados são:</h3>

                <table class="table table-bordered table-sm text-start w-full text-white">
                    <tbody>
                        <tr class="border-t border-gray-800">
                            <th style="width: 35%;" class="py-2 px-3 bg-gray-800/50">Nome Completo</th>
                            <td class="py-2 px-3">@Model.UserData.Nome @Model.UserData.Sobrenome</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">CPF</th>
                            <td class="py-2 px-3">@Model.UserData.CPF</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Idade</th>
                            <td class="py-2 px-3">@Model.UserData.Idade anos</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Gênero</th>
                            <td class="py-2 px-3">@Model.UserData.Genero</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Tipo de Cliente</th>
                            <td class="py-2 px-3">@Model.UserData.Tipo</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">CEP</th>
                            <td class="py-2 px-3">@Model.UserData.CodigoCEP</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Logradouro</th>
                            <td class="py-2 px-3">@Model.UserData.Logradouro</td>
                        </tr>
                                                <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Número</th>
                            <td class="py-2 px-3">@Model.UserData.Numero</td>
                        </tr>
                                                <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Bairro</th>
                            <td class="py-2 px-3">@Model.UserData.Bairro</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Cidade</th>
                            <td class="py-2 px-3">@Model.UserData.Cidade</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Estado</th>
                            <td class="py-2 px-3">@Model.UserData.Estado</td>
                        </tr>
                        <tr class="border-t border-gray-800">
                            <th class="py-2 px-3 bg-gray-800/50">Telefone</th>
                            <td class="py-2 px-3">@Model.UserData.Telefone</td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning bg-yellow-900/20 text-yellow-400 border border-yellow-800 p-4 rounded-lg" role="alert">
                    Não foi possível carregar os dados de confirmação. O seu registro foi processado.
                </div>
            }

            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="w-full md:w-auto bg-green-600 hover:bg-green-500 text-white px-6 py-3 rounded-lg font-bold text-lg shadow-lg shadow-green-500/30 transition duration-300 transform hover:scale-[1.02]">
                    Baixar Dados
                </button>
            </form>

            <a id="delete" asp-page="DeletePersonalData"
               class="inline-block bg-red-600 hover:bg-red-500 text-white px-6 py-3 rounded-lg font-bold text-lg shadow-lg shadow-red-500/30 transition duration-300 transform hover:scale-[1.02]">
                Excluir Conta Permanentemente
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
